@model DTDD_BaoThanh.Models.tbl_Users

<div class="container text-center">
    <div class="col-md-12 ml-auto mr-auto">
        @using (Html.BeginForm("_pUserUpdate", "Home"))
        {
            @Html.AntiForgeryToken()


            <div class="form-group">
                <div class="form-row">
                    @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-3 mt-auto", @type = "email" })
                    <div class="mr-auto ml-auto col-md-7">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control ml-auto mr-auto", @required = "required", @placeholder = "ex: btphuc@gmail.com" ,@style="width: 100%" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>



            <div class="form-group">
                <div class="form-row">
                    @Html.Label("Họ tên", htmlAttributes: new { @class = "control-label col-md-3 mt-auto" })
                    <div class="mr-auto ml-auto col-md-7">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control ml-auto mr-auto", @required = "required", @style = "width: 100%" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>



            <div class="form-group">
                <div class="form-row">
                    @Html.Label("Điện thoại", htmlAttributes: new { @class = "control-label col-md-3 mt-auto" })
                    <div class="mr-auto ml-auto col-md-7">
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control ml-auto mr-auto", @required = "required", @style = "width: 100%" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>



                        <div class="form-group">
                            <div class="form-row">
                                @Html.Label("Địa chỉ", htmlAttributes: new { @class = "control-label col-md-3 mt-auto" })
                                <div class="mr-auto ml-auto col-md-7">
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control ml-auto mr-auto", @required = "required", @style = "width: 100%" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="">
                                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                            </div>
                        </div>

        }
    </div>
</div>