@model IEnumerable<DTDD_BaoThanh.Models.tbl_Best_Seller>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


     <div class="row">
       
        <div class="col-md-12">
            <div class="container carousel-sp">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/Content/images/carousel1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Content/images/carousel2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Content/images/carousel3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

<div class="row show-product">
    <div class="col-md-12">
        <div class="row product-title">
            <span>TOP HOT</span>
        </div>

       
        <!-- danh sách sản phẩm  -->
        <div class="row ds-sp">
            @foreach (var item in Model)
            {
                var url = "/San-pham" + "-" + item.tbl_Products.Alias + "-" + item.tbl_Products.Id;
                <div class="col-md-3 col-sm-6 col-xs-12 product-item-box">
                    <div class="product-item">
                        <div class="product-img">
                            <img class="img-responsive" src="~/Content/images/@item.tbl_Products.Image" alt="">
                        </div>
                    </div>

                    <div class="product-detail">
                        <h4>@item.tbl_Products.Name</h4>
                            <div class="price">
                                <span class="new-price text-center">@String.Format("{0:N0}",item.tbl_Products.Price) VNĐ</span>
                            </div>
                            <div class="box-inner">
                                <ul class="product-link list-inline">
                                    <li class="list-inline-item" data-toggle="popover" data-placement="top" data-content="Thêm Giỏ Hàng" data-trigger="hover">
                                        <a href="@Url.Action("AddShoppingCart","ShoppingCart",new { @Id = @item.tbl_Products.Id , @strURL = @Request.Url.ToString() })" onclick=""><i class="fa fa-cart-plus fa-2x" aria-hidden="true"></i></a>
                                    </li>
                                    <li class="list-inline-item" data-toggle="popover" data-placement="top" data-content="So Sánh" data-trigger="hover">
                                        <a href="#"><i class="fa fa-compress fa-2x" aria-hidden="true"></i></a>
                                    </li>
                                    <li class="list-inline-item" data-toggle="popover" data-placement="top" data-content="Chi Tiết Sản Phẩm" data-trigger="hover">
                                        <a href="@url"><i class="fa fa-info fa-2x" aria-hidden="true"></i></a>
                                    </li>
                                </ul>
                            </div>
                    </div>
                </div>
            }
        </div>
        <!-- danh sách sản phẩm  -->
        
    </div>
</div>

@Html.Action("SomeProduct", "Home")