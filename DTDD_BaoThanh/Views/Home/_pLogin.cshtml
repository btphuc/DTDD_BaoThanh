 <div class="container mt-4">
                @using (Html.BeginForm("_pLogin", "Home"))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <div class="form-row">
                            <div class="text-danger">
                                @ViewBag.ThongBao
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            @Html.Label("Username", htmlAttributes: new { @class = "control-label col-md-3 mt-auto" })
                            <div class="col-md-8">
                                <input type="text" id="Username" name="Username" class="form-control" required="required" maxlength="30" pattern="[A-Za-z0-9]{6,30}" title="Tên đăng nhập tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="form-group">
                            <div class="form-row">
                                @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-3 mt-auto" })
                                <div class="col-md-8">
                                    <input type="password" id="Password" name="Password" class="form-control" required="required" pattern="[A-Za-z0-9]{6,30}" title="Mật khẩu của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />  
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng Nhập" class="btn btn-primary" />
                        </div>
                    </div>

                }
            </div>
