@model IEnumerable<DTDD_BaoThanh.Models.tbl_Users>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh Sách Sản Phẩm
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="listCategory" class="table table-bordered">
                <thead>
                    <tr>
                        <th><label>Tên</label></th>
                        <th><label>Điện Thoại</label></th>
                        <th><label>Địa chỉ</label></th>
                        <th><label>Email</label></th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><label>@item.Name</label></td>
                            <td><label>@item.Phone</label></td>
                            <td><label>@item.Address</label></td>
                            <td><label>@item.Email</label></td>
                            <td class="text-center">
                                <a href="@Url.Action("Delete","User",new { id = item.Id})" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

